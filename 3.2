using System;

class Program
{
    static void Main()
    {
        Console.Write("NÃºmero de horas trabajadas: ");
        int horasTrabajadas = int.Parse(Console.ReadLine());

        Console.Write("Pago por hora: ");
        double tarifaHora = double.Parse(Console.ReadLine());

        double salario;

        if (horasTrabajadas <= 40)
        {
            salario = horasTrabajadas * tarifaHora;
        }
        else
        {
            int extra = horasTrabajadas - 40;
            salario = 40 * tarifaHora + extra * tarifaHora * 2;
        }

        Console.WriteLine($"Tu sueldo semanal es: ${salario}");
        Console.ReadKey();
    }
}
