using System;

class Program
{
    static void Main()
    {
        Console.Write("Edad: ");
        int edad = int.Parse(Console.ReadLine());

        Console.Write("Promedio: ");
        double promedio = double.Parse(Console.ReadLine());

        double montoBeca = 0;

        if (edad > 18)
        {
            if (promedio >= 9)
                montoBeca = 2000;
            else if (promedio >= 7.5)
                montoBeca = 1000;
            else if (promedio >= 6)
                montoBeca = 500;
        }
        else
        {
            if (promedio >= 9)
                montoBeca = 3000;
            else if (promedio >= 8)
                montoBeca = 2000;
            else if (promedio >= 6)
                montoBeca = 100;
        }

        if (montoBeca > 0)
            Console.WriteLine($"Beca otorgada: ${montoBeca}");
        else
            Console.WriteLine("No se otorgará beca, recibirá una carta de invitación.");

        Console.ReadKey();
    }
}
