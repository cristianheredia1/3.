using System;

class Program
{
    static void Main()
    {
        Console.Write("Introduce el precio del producto: ");
        double precio = double.Parse(Console.ReadLine());
        double descuento;

        if (precio >= 200)
            descuento = 0.15;
        else if (precio > 100)
            descuento = 0.12;
        else
            descuento = 0.10;

        double precioFinal = precio - (precio * descuento);
        Console.WriteLine($"Se aplic√≥ un descuento de {descuento * 100}%.");
        Console.WriteLine($"Total a pagar: ${precioFinal}");
        Console.ReadKey();
    }
}
